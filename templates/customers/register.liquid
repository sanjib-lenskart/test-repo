<style>
  .pointer {cursor: pointer;}
  .title-break {background: #C4C4C4;height:1px;}
  #register_page  .form_vertical{max-width:420px;}
  .content{margin:10px 0 10px 0;}
  .loginpage_cus .loginpage_cus_container #register_page  .form_vertical input, button{
    height: 50px;
	}
  .loginpage_cus .loginpage_cus_container #register_page  .form_vertical input{
    background:#fff;
  }
  .loginpage_cus .loginpage_cus_container #register_page .form_vertical button{
    background:#49aa9c;
    border-color: #49aa9c;
    font-weight:600;
  }
  .privacyMsg{color:#333 !important;font-size:10px;}
  .privacyTxt{color:#49aa9c !important;font-size:10px;}
</style>
<div class="loginpage_cus text-center">
  <div class="loginpage_cus_container">    
        <div class="content">
          <div id="register_page">
            <div class="containerq">
                <br/>
              <div class="row">
                <div class="col-sm-12">
                  <div class="">

                    <div class="form_vertical">
                      <h1>Let's get to know you!</h1>
                      {% form 'create_customer' %}
                      <!--  				<h3 class="text-center">Sign-up here</h3> -->
                      
                      <label for="FirstName" class="hide">{{ 'customer.register.first_name' | t }}</label>
                      <input type="text" name="customer[first_name]" placeholder="FIRST NAME" id="FirstName" {% if form.first_name %}value="{{ form.first_name }}"{% endif %} autofocus>

                      <label for="LastName" class="hide">{{ 'customer.register.last_name' | t }}</label>
                      <input type="text" name="customer[last_name]" placeholder="LAST NAME" id="LastName" {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

                      <label for="Email" class="hide">{{ 'customer.register.email' | t }}</label>
                      <input type="email" name="customer[email]" id="Email" placeholder="EMAIL" class="{% if form.errors contains 'email' %} input--error{% endif %}" {% if form.email %} value="{{ form.email }}"{% endif %} autocorrect="off" autocapitalize="off">

                      <label for="CreatePassword" class="hide">{{ 'customer.register.password' | t }}</label>
                      <input type="password" name="customer[password]" placeholder="PASSWORD" id="CreatePassword" class="{% if form.errors contains 'password' %} input--error{% endif %}">

                      <p class="text-left">
<!--                         <input type="submit" value="CREATE ACCOUNT" class="btn mysignupak"> -->
                        <button class="btn mysignupak has_loading_icon">CREATE ACCOUNT
                        <span class="loading"></span>
                        </button>
                      </p>
                      <p class="privacyMsg">By creating this account, you agree to the <a href="/pages/privacy-policy" class="privacyTxt">Privacy Policy</a>.</p>
                      {{ form.errors | default_errors }}
<script src='//open-signin.okasconcepts.com/customer/script?shop=lenskart-international.myshopify.com'></script>
                      
                      {% endform %}
                    </div>

                  </div>
                </div>
              
              </div>
            </div>
          </div>
        </div>
    	<div class="content">
          <hr class="title-break">
		<h1>I have an account</h1>
          <div id="login_page">
    
      	<span onclick="window.location='/account/login'">
          <label id="RecoverPassword" class="pointer" for="firstq">Sign in</label>
        </span>
          </div></div>
    
</div>
</div>

