  <h1 class="page_header">Please fill in your details for refund </h1>
  <div class="row">
    <div class="col-xs-12 col-sm-5">

      <br>
      <br>
      <div class="order_details">
        <p>Order Number : <span class="order_name"></span></p>
        <p>Customer Email : <span class="order_email"></span></p>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="text-left">

      </div>

      {% unless page.content == blank %}
      <div class="rte">

      </div>
      {% endunless %}
      <form id="refund_form">
        <input type="hidden" name="order_number" id="order_number" />
        <input type="hidden" name="order_email" id="order_email" />
        <input type="hidden" name="order_name" id="order_name" />
        <input type="hidden" name="action" id="action" value="upsertRefundDetails" />
        <input type="hidden" name="shopid" id="shopid" value="1" />
        <div class="row table_view">
          <div class="col-xs-12 col-sm-4">Account Holder Name</div>
          <div class="col-xs-12 col-sm-8">
            <input type="text" name="refund_ac_name" required />
          </div>
        </div>
        <br>
        <div class="row table_view">
          <div class="col-xs-12  col-sm-4">Account Number</div>
          <div class="col-xs-12 col-sm-8">
            <input type="text" name="refund_ac_number" required /></div>
        </div>
        <br>
        <div class="row table_view">
          <div class="col-xs-12  col-sm-4">IFSC Code</div>
          <div class="col-xs-12 col-sm-8"><input type="text" name="refund_ac_ifsc" required/>
          </div>
        </div>  
        <br>
        <div class="row table_view ">
          <div class="col-xs-12  col-sm-4">

          </div>
          <div class="col-xs-12 col-sm-8"><button class="btn ">Submit</button>
          </div>


        </div> 

      </form>
    </div>
  </div>
</div>
