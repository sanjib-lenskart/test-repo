
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12">
      {% unless section.settings.title == blank  %}
      <h1 class="title text-center">{{section.settings.title}} <span>{{section.settings.title-text-box}}</span></h1>
      {% endunless %}
    </div>
    {% for block in section.blocks %}
    {% assign col = collections[block.settings.collectionF] %}
    {{col.title   }}--jhvhgvjh
    {{collections}}--mbn
    <div class="col-xs-12 col-sm-6 col-md-6 coll-container"> 
      <a href="{{ block.settings.link }}" >        
        {% assign src_name = block.settings.image  %}
        {% include 'srcset-img' %}
        
      {% unless block.settings.name == blank  %}
        <div class="text-wrapper">
     <div class="type">{{ block.settings.type }} <span class="glasses">{{ block.settings.name }}</span></div>
      
     
        </div>
      {% endunless %}
      </a>
      <div class="bottom-des">
        <p class="glasses">{{ block.settings.ctitle }}</p>
       <a href="{{ block.settings.link }}" class="c-button">{{ block.settings.text_11 }}</a>
      </div>
    </div>
    {% endfor %}
  </div>
</div>
<style>
  .home-featured-collections{
  background:{{ section.settings.bgcolor }};
  }
</style>
{% schema %}
  {
    "name": "Home Featured Colections",
	"class": "home-featured-collections",
	"max_blocks":20,
    "settings": [
      {
        "type": "header",
        "content": "General"
      },
      {
        "id": "title",
        "type": "text",
        "label": "Heading",
        "default": "Title"
      },
     {
        "id": "bgcolor",
        "type": "color",
        "label": "Background Color",
        "default": "#eaeff4"
      }  
    ],
"blocks":[  
      {  
      "type":"text",
      "name":"Collection",
          "settings":[  
		  {
          "type":"image_picker",
          "id":"image",
          "label":"Image"
          },
			{
				"type": "collection",
				"id": "collectionF",
				"label": "select collection"
			},
          {
          "id": "link",
          "type": "url",
          "label": "Collection link"
          },   
		  {
          "type":"text",
          "id":"type",
          "label":"Type",
		  "default":"Text"
          },
		  {
          "type":"text",
          "id":"name",
          "label":"Collection Name"
          },
          {
          "type": "text",
          "label": "button text",
          "id": "text_11",
          "default":"Shop Now"
          },
          {
          "type": "url",
          "label": "button link",
          "id": "url_11"
          },
         {
          "id": "ctitle",
          "type": "text",
          "label": "Heading",
          "default": "Title"
          }
		  
        ]
 	  }		
	],

        "presets": [
          {
            "name": "Home Featured Colections",
            "category": "Collection"
          }
        ]
  }
{% endschema %}