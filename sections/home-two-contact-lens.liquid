<div class="container-fluid padding-zero xs-hide">
  <div class="row margin-zero">   
     <div class="col-md-12 col-sm-12 padding-zero col-one" style="background: #b2b2bb;">      
        <div class="vdo-section-desk">
        <video width="100%" id="videoDD" autoplay loop muted>
          <source src="https://cdn.shopify.com/s/files/1/0047/5335/8922/files/desktop.mp4?6263" type="video/mp4" />
          <source src="https://cdn.shopify.com/s/files/1/0047/5335/8922/files/desktop.mp4?6263" type="video/ogg" />
          Your browser does not support HTML5 video.
        </video>
      </div>
      <div class="text-section">
        <div class="header_2">{{section.settings.htext_1}}</div>
        <span id="head_try3d" class="std-btn">          
          <a href="/pages/compare-looks">Try Frames In 3D</a>
        </span>         
      </div>       
       <a href="/collections/eyeglasses" class="shopeye std-btn">Shop Eyeglasses</a>
       <a href="/collections/sunglasses" class="shopsun std-btn">Shop Sunglasses</a>
    </div>
  </div>
</div>
<style>
  .two-img-col .text-section{background: rgba(0, 0, 0, {{ section.settings.opacity }});}
  
  #eg-glasses-btn{cursor:pointer;}
  #sg-glasses-btn{cursor:pointer;}
  #frm-glasses-btn{cursor:pointer;}

  .modal-content{display:none;}
  .modal-content-2{display:none;}
  .modal-content-3{display:none;}

  .glassesmodel{    
    height: 100%; 
    position:relative;
  }
  
  .modal-glass {
    display: none;
    position: fixed;
    z-index: 99999;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow:hidden;
    background-color: rgb(0,0,0);
    background-color: rgba(0,0,0,0.4);
    height: 100vh;
  }

  .close:hover,
  .close:focus {
    color: #000;
    text-decoration: none;
    cursor: pointer;
  }
  .overflowhidden{overflow: hidden;}
</style>

