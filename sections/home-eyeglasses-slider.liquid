<div class="container">
  <div class="row new-home-slider">
    <ul class="carouseleye clearfix" style="margin-top:40px;">
    {% for block in section.blocks %}
    <li class="carousel-cell"> 
      <a href="{{ block.settings.link }}" >        
        {% assign src_name = block.settings.image  %}
        {% include 'srcset-img' %}
        
      {% unless block.settings.name == blank  %}
        <div class="text-wrapper">
        <div class="type">
          {{ block.settings.type }} <span class="glasses">{{ block.settings.name }}</span></div>
       </div>
      {% endunless %}
        <div class="bottom-des">
        <p class="glasses">{{ block.settings.ctitle }}</p>
      </div>
      </a>
      
     </li> 
    {% endfor %}
    </ul>
  </div>
</div>

<script>
 $( document ).ready(function() {
 $('.home_sunglass_slider').hide();  
  $('.eyeglasses-tab').on( 'click', function() {
   $('.home_sunglass_slider').hide();
   $('.home_eyeglass_slider').show();
   $('div#tabs-slider li.sunglasses-tab').removeClass('active');
   $('div#tabs-slider li.eyeglasses-tab').addClass('active');
    $carousel.show()
    .flickity('resize');
  });
  
   $('.sunglasses-tab').on( 'click', function() {
   $('.home_sunglass_slider').show();
   $('.home_eyeglass_slider').hide();
   $('div#tabs-slider li.sunglasses-tab').addClass('active');
   $('div#tabs-slider li.eyeglasses-tab').removeClass('active');
     $carousel.show()
    .flickity('resize');
  });
   
   
   var $carousel = $('.carouseleye').flickity({
     prevNextButtons: true,
     autoPlay: true,
     lazyLoad: true,
     freeScroll:false,
     wrapAround: true,
     pageDots: false
  });
  });
 
  
</script>
