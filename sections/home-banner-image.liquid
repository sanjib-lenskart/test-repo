        },
        {
          "type": "text",
          "label": "Button name 1",
          "id": "home_slider_btn"
        },
        {
          "type": "url",
          "label": "Button URL 1",
          "id": "home_slider_link"
        },
        {
          "type": "text",
          "label": "Sub-header text 2",
          "id": "subheader_text2"
        },
        {
          "type": "text",
          "label": "Button name 2",
