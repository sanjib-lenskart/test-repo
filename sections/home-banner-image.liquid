        },
        {
          "type": "url",
          "label": "Button URL 2",
          "id": "home_slider_link2"
        },
        {
          "type": "text",
          "label": "Sub-header text 3",
          "id": "subheader_text3"
        },
        {
          "type": "text",
          "label": "Button name 3",
          "id": "home_slider_btn3"
        },
        {
          "type": "url",
          "label": "Button URL 3",
          "id": "home_slider_link3"
        },
        {
          "type": "text",
          "label": "Sub-header text 4",
          "id": "subheader_text4"
        },
        {
          "type": "text",
          "label": "Button name 4",
          "id": "home_slider_btn4"
        },
        {
          "type": "url",
          "label": "Button URL 4",
          "id": "home_slider_link4"
        }        
      ],
        "presets": [
          {
            "name": "Desktop - Banner image",
            "category": "Banner"
          }
        ]
  }
  {% endschema %}
  {% comment %}
</script>
{% endcomment %}

