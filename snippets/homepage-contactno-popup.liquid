<script>  
  function PopUpSubmit() {
    localStorage.setItem("popupWasShown",1);
    
    var delayInMilliseconds = 2000; //1 second
	setTimeout(function() {
  		$( "#bogoform" ).submit();
	}, delayInMilliseconds);
  }
  window.onload = function () {
    setTimeout(function () {
