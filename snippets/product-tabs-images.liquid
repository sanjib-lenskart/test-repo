<div class="row text-center measurement_shopify hide">
  <div class="col-sm-6 col-md-5 col-xs-12">
    <h4>FRAME DETAILS</h4> 
    {{ product.description }}
  </div>

  <div class="col-xs-12 col-sm-6 col-md-7">
    <div class="row text-center measurementsize">  
      <h4 class="">MEASUREMENTS</h4>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <img src="https://static.lenskart.com/media/desktop/img/1st_frame.jpg" alt=""/>
        {% unless product.metafields.Measurement.bridge_size == blank %}
        <div class="size-text">{{ product.metafields.Measurement.bridge_size }} mm</div>
        {% endunless %}
      </div>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <img src="https://static1.lenskart.com/media/desktop/img/2nd_frame.jpg" alt=""/>
        {% unless product.metafields.Measurement.temple_size == blank %}
        <div class="size-text">{{ product.metafields.Measurement.temple_size }} mm</div>
        {% endunless %}
      </div>
      <br>  
      <div class="col-xs-12 col-sm-12 col-md-12">
        <img src="https://static2.lenskart.com/media/desktop/img/3rd_frame.jpg" alt=""/>
        {% unless product.metafields.Measurement.eye_size == blank %}
        <div class="size-text">{{ product.metafields.Measurement.eye_size }} mm</div>
        {% endunless %}
      </div>           
    </div>
  </div> 
</div>