<div class="child_menu {% if effect == true %}animated fadeInUp{% endif %}">
  <ul class="child_ul">
    {% for childlink in linklists[child_list_handle].links %}
    <li class="{% if childlink.active %}active{% endif %} child_li">
      {% assign sub_child_list_handle = childlink.title | handleize %}
      {% if linklists[sub_child_list_handle].links == blank %}
      <a href="{{ childlink.url }}"><span>{{ childlink.title | escape }}</span></a>
      {% else %}
      <a href="{{ childlink.url }}">
        <span>{{ childlink.title | escape }}</span>
         {% if effect == true %}
        <i class="fa fa-caret-right" aria-hidden="true"></i>
         {% endif %}
      </a>
      <ul class="third_menu {% if effect == true %}animated fadeInUp{% endif %}">
        {% for subchildlink in linklists[sub_child_list_handle].links %}
        <li class="{% if subchildlink.active %}active{% endif %}">
          <a href="{{ subchildlink.url }}">{{ subchildlink.title | escape }}</a>
        </li>
        {% endfor %}
      </ul>
      {% endif %}
    </li>
    {% endfor %}
  </ul>
</div>